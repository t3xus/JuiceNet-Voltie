<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- App Information -->
    <key>CFBundleDevelopmentRegion</key>
    <string>$(DEVELOPMENT_LANGUAGE)</string>
    <key>CFBundleDisplayName</key>
    <string>VoltieWiFiScanner</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIdentifier</key>
    <string>com.voltiegroup.wifiscanner</string>
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    <key>CFBundleName</key>
    <string>VoltieWiFiScanner</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0</string>
    <key>CFBundleVersion</key>
    <string>1</string>
    <key>LSRequiresIPhoneOS</key>
    <true/>

    <!-- Permissions -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>This app needs access to your location to scan for Wi-Fi networks.</string>
    <key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
    <string>This app requires location access to find nearby Wi-Fi networks.</string>
    <key>UIBackgroundModes</key>
    <array>
        <string>fetch</string>
    </array>

    <!-- Required Entitlements -->
    <key>UIRequiredDeviceCapabilities</key>
    <array>
        <string>wifi</string>
    </array>

    <!-- Email Permissions -->
    <key>NSContactsUsageDescription</key>
    <string>This app requires email functionality to send network details to support.</string>
    <key>NSPhotoLibraryUsageDescription</key>
    <string>This app does not store images but ensures app privacy compliance.</string>

    <!-- App Launch Screen -->
    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>

    <!-- App Support for Mail -->
    <key>LSApplicationQueriesSchemes</key>
    <array>
        <string>mailto</string>
    </array>
</dict>
</plist>
